<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/cafe6"
    tools:context=".authen">


    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="200dp"
        android:layout_centerHorizontal="true"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="550dp" />



    <EditText
        android:id="@+id/txt_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        android:drawableLeft="@drawable/ic_perm_identity_black_24dp"
        android:layout_marginLeft="40dp"
        android:textColor="#ffffff"
        android:hint="   Username"
        android:ems="15"/>

    <EditText
        android:id="@+id/txt_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:layout_marginTop="310dp"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:layout_marginLeft="40dp"
        android:textColor="#ffffff"
        android:hint="   Password"
        android:drawableRight="@drawable/ic_error_outline_black_24dp"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/forgot_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot your password?"
        android:textColor="#ffffff"
        android:layout_marginTop="440dp"
        android:layout_marginLeft="110dp"/>

    <Button
        android:id="@+id/contentContainer"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:layout_marginTop="470dp"
        android:layout_marginLeft="110dp"
        android:drawablePadding="-5dp"
        android:text="Sign up"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:background="@drawable/button_sign_up"/>

    <Button
        android:id="@+id/sign_in"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="370dp"
        android:background="#57A6D5"
        android:text="Sign In"
        android:textColor="#ffffff"
        android:textSize="17dp" />

</RelativeLayout>
